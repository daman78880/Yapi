                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/layoutUploadImageEditProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/photo_upload_box_size"
                                android:layout_marginStart="@dimen/topMargin"
                                android:background="@drawable/lite_blue_drawable"
                                android:padding="@dimen/_15sdp"
                                app:layout_constraintBottom_toBottomOf="@+id/constraintUploadPhoto"
                                app:layout_constraintStart_toEndOf="@+id/constraintUploadPhoto"
                                app:layout_constraintTop_toTopOf="@+id/constraintUploadPhoto">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/imgGalleryUploadEditProfile"
