<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.yapi.views.edit_profile.ViewModelEditProfile" />

        <variable
            name="mView"
            type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivOutsideCloseAddPeople"
            android:layout_width="@dimen/outside_cross_width"
            android:layout_height="@dimen/outside_cross_height"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_2sdp"
            android:onClick="@{model::onClick}"
            android:src="@drawable/ic_cross_icon"
            android:visibility="@{model.checkTabValid?mView.VISIBLE:mView.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutEditProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:onClick="@{model::onClick}"
            android:paddingStart="@dimen/startMainMargin"
            android:paddingTop="@dimen/startMainMargin"
            android:paddingEnd="@dimen/startMainMargin"
            android:paddingBottom="@dimen/startMainMargin"
            tools:context=".views.edit_profile.EditProfileFragment">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollViewEditProfile"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/topFiveMargin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.568">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutScrollViewEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="@{model::onClick}">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgCancelEditProfile"
                        android:layout_width="@dimen/iconSize"
                        android:layout_height="@dimen/iconSize"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:onClick="@{model::onClick}"
                        android:src="@drawable/ic_cross_icon"
                        android:visibility="@{model.checkTabValid?mView.GONE:mView.VISIBLE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/linearTopBanner"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_100sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@color/information_profile_back_box"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/iconSize"
                            android:src="@drawable/upload_background_banner"
                            android:layout_height="@dimen/iconSize"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/darkGrey"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textSize="@dimen/normalTextSize"
                            android:fontFamily="@font/larsseit_bold"
                            android:textAllCaps="true"
                            android:text="@string/upload_your_background_text"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearTopLabel"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imgCancelEditProfile"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_75sdp"
                        android:layout_height="wrap_content">
                        <com.yapi.common.RoundRectCornerImageView
                            android:id="@+id/imgProfilePicEditProfile"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:visibility="@{model.noImageOnlyNameVisible?mView.GONE:mView.VISIBLE}"
                            setRoundRectImage="@{model.photoUrl}"
                            android:scaleType="fitXY"
                            android:src="@drawable/demo_photo"/>

                        <RelativeLayout
                            android:id="@+id/relNameValue"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:background="@drawable/et_drawable"
                            android:backgroundTint="#FEFAE5"
                            android:visibility="@{model.noImageOnlyNameVisible?mView.VISIBLE:mView.GONE}"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvGroupImageText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/larsseit_bold"
                                android:letterSpacing="@dimen/text_letter_spacing"
                                android:lineSpacingExtra="@dimen/line_spacing_extra"
                                android:text="@{model.showTopNameTag}"
                                android:textColor="#F2CB00"
                                android:textSize="@dimen/titleTextSize" />
                        </RelativeLayout>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtNameEditProfile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/larsseit_bold"
                        android:text="@{model.setNameValue}"
                        android:textColor="@color/darkGrey"
                        android:textSize="@dimen/_20ssp"
                        app:layout_constraintEnd_toStartOf="@+id/btnDoneEditProfile"
                        app:layout_constraintStart_toEndOf="@id/linearTopLabel"
                        app:layout_constraintTop_toBottomOf="@id/linearTopBanner"
                        app:layout_constraintBottom_toBottomOf="@id/linearTopLabel"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtUserNameEditProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/larsseit_medium"
                        android:text="\@briski"
                        android:textColor="@color/darkLiteGrey"
                        android:textSize="@dimen/normalSmallTextSize"
                        app:layout_constraintTop_toBottomOf="@id/txtNameEditProfile"
                        app:layout_constraintStart_toStartOf="@id/txtNameEditProfile" />

                    <ImageView
                        android:id="@+id/txtTempDotEditProfile"
                        android:layout_width="@dimen/_4sdp"
                        android:layout_height="@dimen/_4sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:src="@drawable/circle_bullet"
                        app:layout_constraintBottom_toBottomOf="@id/txtUserNameEditProfile"
                        app:layout_constraintStart_toEndOf="@id/txtUserNameEditProfile"
                        app:layout_constraintTop_toTopOf="@id/txtUserNameEditProfile"
                        app:tint="#E6E6E6" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtTopicEditProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:fontFamily="@font/larsseit_medium"
                        android:gravity="center"
                        android:text="Datacube"
                        android:textColor="@color/darkLiteGrey"
                        android:textSize="@dimen/normalSmallTextSize"
                        app:layout_constraintBottom_toBottomOf="@+id/txtUserNameEditProfile"
                        app:layout_constraintStart_toEndOf="@+id/txtTempDotEditProfile"
                        app:layout_constraintTop_toTopOf="@+id/txtUserNameEditProfile" />

