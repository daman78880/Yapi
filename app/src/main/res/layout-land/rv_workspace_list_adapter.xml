                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSecondRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:weightSum="2"
